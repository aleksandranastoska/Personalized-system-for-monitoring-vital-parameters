# Use the official Maven image to build the project
FROM maven:3.8.5-openjdk-17 AS build

# Set the working directory inside the container
WORKDIR /app

# Copy the pom.xml and source code to the container
COPY personalized-system-for-monitoring-vital-parameters/pom.xml .
COPY personalized-system-for-monitoring-vital-parameters/src ./src

# Package the application
RUN mvn clean package -DskipTests

# Debugging: List the contents of the target directory to verify the JAR file is generated
RUN ls -l /app/target

# Use the official OpenJDK image to run the application
FROM openjdk:17-jdk-slim

# Set the working directory inside the container
WORKDIR /app

# Copy the JAR file from the previous stage
COPY --from=build /app/target/*.jar app.jar

# Expose the port the application runs on
EXPOSE 8080

# Run the application
ENTRYPOINT ["java", "-jar", "app.jar"]
